{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react-jsx",
    "noEmit": true,
    "allowJs": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
